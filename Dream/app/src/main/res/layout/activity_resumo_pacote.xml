<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumoPacoteActivity">

    <ImageView
        android:id="@+id/resumo_foto_local_pacote"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/resumo_local_pacote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        tools:text="São Paulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resumo_foto_local_pacote"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/resumo_dias_pacote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="2 dias"
        app:layout_constraintStart_toStartOf="@+id/resumo_local_pacote"
        app:layout_constraintTop_toBottomOf="@+id/resumo_local_pacote" />

    <TextView
        android:id="@+id/resumo_data_pacote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/resumo_preco_pacote"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/resumo_preco_pacote"
        app:layout_constraintStart_toStartOf="@+id/resumo_dias_pacote"
        app:layout_constraintTop_toBottomOf="@+id/resumo_dias_pacote"
        tools:text="08/12 - 10/12 (2017)" />

    <TextView
        android:id="@+id/resumo_preco_pacote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/resumo_data_pacote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/resumo_data_pacote"
        tools:text="R$ 200,90" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preço final:"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/resumo_preco_pacote"
        app:layout_constraintEnd_toEndOf="@+id/resumo_preco_pacote" />

    <Button
        android:id="@+id/resumo_btn_pagamento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Realizar Pagamento"
        android:textColor="@android:color/white"
        android:background="@drawable/button_redondo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>